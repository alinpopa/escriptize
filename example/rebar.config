{deps,
 [
  {jiffy, ".*",
   {git, "git://github.com/davisp/jiffy.git", {tag, "0.14.4"}}}
 ]}.

{overrides, [
    {override, jiffy, [
        {plugins, [pc]},
        {artifacts, ["priv/jiffy.so"]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]}
]}.

